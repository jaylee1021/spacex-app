    <div class="table-container">
        <table
            class="table is-fullwidth has-sticky-column is-narrow is-striped is-bordered is-hoverable has-sticky-header has-sticky-footer">
            <thead>
                <tr>
                    <th><abbr title="Name">Name</abbr></th>
                    <th><abbr title="ID">ID</abbr></th>
                    <th><abbr title="Status">Status</abbr></th>
                    <th><abbr title="Location">Location</abbr></th>
                    <th><abbr title="Coordinates">Coordinates</abbr></th>
                    <th><abbr title="Launch Attempts/Successes">Launch Attempts/Successes</abbr></th>
                    <th><abbr title="Rockets">Rockets</abbr></th>
                    <th><abbr title="Launches">Launches</abbr></th>
                    <th><abbr title="Details">Details</abbr></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th><abbr title="Name">Name</abbr></th>
                    <th><abbr title="ID">ID</abbr></th>
                    <th><abbr title="Status">Status</abbr></th>
                    <th><abbr title="Location">Location</abbr></th>
                    <th><abbr title="Coordinates">Coordinates</abbr></th>
                    <th><abbr title="Launch Attempts/Successes">Launch Attempts/Successes</abbr></th>
                    <th><abbr title="Rockets">Rockets</abbr></th>
                    <th><abbr title="Launches">Launches</abbr></th>
                    <th><abbr title="Details">Details</abbr></th>
                </tr>
            </tfoot>
            <tbody>
                <% for( let x=0; x < launchpads.length; x++ ) { %>
                    <% let launchpad=launchpads[x] %>
                        <tr>
                            <th>
                                <%= launchpad.full_name %>
                                    <br>
                                    (<%= launchpad.name %>)
                                        <br>
                                        <img src="<%= launchpad.images.large[0] %>" alt="<%= launchpad.name %>"
                                            style="width: 400px;">
                            </th>
                            <td>
                                <%= launchpad.id %>
                            </td>
                            <td>
                                <%= launchpad.status %>
                            </td>
                            <td>
                                <%= launchpad.locality %>, <%= launchpad.region %>
                            </td>
                            <td>
                                <%= launchpad.latitude %>, <%= launchpad.longitude %>
                            </td>
                            <td>
                                Launch Attempts: <%= launchpad.launch_attempts %>
                                    <br>
                                    Launch Successes: <%= launchpad.launch_successes %>
                            </td>
                            <td>
                                <% for( let x=0; x < launchpad.rockets.length; x++ ) { %>
                                    <%= launchpad.rockets[x] %>
                                        <br>
                                        <% } %>
                            </td>
                            <td>
                                <% if (launchpad.launches.length < 1) { %>
                                    None
                                    <% } else {%>
                                        <% for( let x=0; x < launchpad.launches.length; x++ ) { %>
                                            <%= launchpad.launches[x] %>
                                                <br>
                                                <% } %>
                                                    <% } %>
                            </td>
                            <td style="max-width: 1000px; word-wrap: break-word;">
                                <%= launchpad.details%>
                            </td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>








